# Application Settings
APP_ENV=development
API_PORT=8000
API_HOST=0.0.0.0

# Supabase Configuration (Vector Store)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Groq API Configuration
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=openai/gpt-oss-120b
GROQ_MODEL_FAST=openai/gpt-oss-120b

# Google Gemini Configuration (recommended for embeddings)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Embedding Configuration (use "gemini" for Gemini API - recommended)
# Options: "gemini" or "sentence-transformers/all-mpnet-base-v2" (local, 438MB download)
EMBEDDING_MODEL=gemini
EMBEDDING_DIMENSION=768

# RAG Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_RAG_RESULTS=5
SIMILARITY_THRESHOLD=0.5

# Agent Configuration\
MAX_ROUTER_ITERATIONS=2

# Logging
LOG_LEVEL=INFO

# Opik Configuration
OPIK_API_KEY=your_opik_api_key_here
OPIK_WORKSPACE_NAME=federal-ka-manjan-educational-ai-agent
